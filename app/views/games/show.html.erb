<DOCTYPE html>
<html>

<head>


</head>

	<body>

		<h1>Welcome to Pawn Shop</h1>

		<table>
      <% 8.downto(1) do |column| %>
        <tr class="column <%= column %>">
          <% 1.upto(8) do |row| %>
            <td class="<%= row %> <%= column %>">
              <!--check to see if there is a piece-->
              <% if piece = @game.pieces.detect { |piece| piece.x_coordinate == row && piece.y_coordinate == column } %>

                <div class="piece" id="piece-<%= piece.id %>">
                  <%= link_to image_tag("#{piece.color}#{piece.type.downcase}.png"), game_piece_path(@game,piece) %>
                </div>

              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>

		<script>
			$(function() {
				$('.piece').draggable({ snap: '.square' });
				$('.square').droppable({
				  drop: function( event, ui ) {
						var piece_id = $('.piece').attr('id');
						//var game_id = $('.game.id').attr('id');
						var location = $(this).attr('id');
						$( this )
	            alert(piece_id + ' ' + location);
						$.ajax({
							type: 'PUT',
							url: 2 + '/pieces/' + piece_id,
							dataType: 'json',
							data: {
								piece: location
							},
							success: function(data) {
								$(location).attr('href', data.update_url);
							}
						});
					}
				});
			});

		</script>

	</body>


</html>
